<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.florist.controller.SaleFormController"
            prefHeight="500.0" prefWidth="600.0" styleClass="root">
    
    <top>
        <VBox styleClass="content-header">
            <Label text="New Transaction" styleClass="title"/>
        </VBox>
    </top>
    
    <center>
        <HBox alignment="CENTER" fillHeight="false">
            <padding>
                <Insets top="20" right="0" bottom="0" left="0"/>
            </padding>
            <VBox spacing="24" prefWidth="500" styleClass="card">
                <Label text="SALE DETAILS" styleClass="card-title"/>
                
                <GridPane hgap="16" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" prefWidth="150" hgrow="NEVER"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    
                    <Label text="Flower" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="flowerComboBox" promptText="Select a flower..." 
                              GridPane.rowIndex="0" GridPane.columnIndex="1" 
                              maxWidth="Infinity" onAction="#handleFlowerSelection" styleClass="combo-box"/>
                    
                    <Label text="Unit Price" styleClass="label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="unitPriceLabel" text="0.00 MAD" 
                           GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="value-label" style="-fx-font-weight: bold;"/>
                    
                    <Label text="Available Stock" styleClass="label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="availableStockLabel" text="0" 
                           GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="value-label"/>
                    
                    <Label text="Quantity Sold" styleClass="label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="quantityField" promptText="Enter quantity..." 
                               GridPane.rowIndex="3" GridPane.columnIndex="1"
                               onKeyReleased="#handleQuantityChange" styleClass="text-field"/>
                    
                    <Label text="Customer Name" styleClass="label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="customerNameField" promptText="Name (optional)" 
                               GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Separator GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-padding: 10 0 10 0;"/>
                    
                    <Label text="Grand Total" styleClass="label" style="-fx-font-weight: 700; -fx-font-size: 16px;" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <Label fx:id="totalPriceLabel" text="0.00 MAD" 
                           GridPane.rowIndex="6" GridPane.columnIndex="1" style="-fx-font-size: 24px; -fx-font-weight: 800; -fx-text-fill: #e63946;"/>
                </GridPane>
                
                <HBox spacing="16" alignment="CENTER_RIGHT">
                    <Button fx:id="clearBtn" text="Clear" onAction="#handleClear" styleClass="button-ghost" prefWidth="120"/>
                    <Button fx:id="saveSaleBtn" text="Complete Sale" 
                            onAction="#handleSaveSale" styleClass="button-primary" prefWidth="200"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
    
</BorderPane>
