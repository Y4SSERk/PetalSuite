<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.florist.controller.FlowerManagementController"
            prefHeight="700.0" prefWidth="1000.0" styleClass="root">
    
    <!-- Top - Header -->
    <top>
        <VBox styleClass="header">
            <Label text="Flower Management" styleClass="title"/>
        </VBox>
    </top>
    
    <!-- Center - Table and Form -->
    <center>
        <SplitPane dividerPositions="0.65" style="-fx-background-color: transparent; -fx-padding: 24;">
            <!-- Left - Table -->
            <VBox spacing="16">
                <padding>
                    <Insets right="16"/>
                </padding>
                
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <Button fx:id="refreshBtn" text="Refresh" onAction="#handleRefresh" styleClass="button"/>
                    <Button fx:id="deleteBtn" text="Delete" onAction="#handleDelete" styleClass="danger-button"/>
                    <Button fx:id="selectAllBtn" text="Select All" onAction="#handleSelectAll" styleClass="button" visible="false" managed="false"/>
                </HBox>
                
                <TableView fx:id="flowerTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="120"/>
                        <TableColumn fx:id="colorColumn" text="Color" prefWidth="90"/>
                        <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
                        <TableColumn fx:id="priceColumn" text="Price (MAD)" prefWidth="100"/>
                        <TableColumn fx:id="quantityColumn" text="Stock" prefWidth="70"/>
                        <TableColumn fx:id="arrivalDateColumn" text="Arrival" prefWidth="110"/>
                        <TableColumn fx:id="freshnessDaysColumn" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="supplierColumn" text="Supplier" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Right - Form -->
            <VBox spacing="20" styleClass="form-panel">
                <padding>
                    <Insets top="24" right="24" bottom="24" left="24"/>
                </padding>
                
                <Label text="Flower Details" styleClass="form-title"/>
                
                <GridPane hgap="12" vgap="16">
                    <Label text="Name" styleClass="label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="nameComboBox" promptText="Select name..." editable="true"
                               GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="200" styleClass="combo-box"/>
                    
                    <Label text="Color" styleClass="label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <ColorPicker fx:id="colorPicker" promptText="Select color" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="200" styleClass="color-picker"/>
                    
                    <Label text="Category" styleClass="label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="categoryComboBox" promptText="Select category..." editable="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="200" styleClass="combo-box"/>
                    
                    <Label text="Price (MAD)" styleClass="label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="priceField" promptText="0.00" 
                               GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Quantity" styleClass="label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="quantityField" promptText="0" 
                               GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Arrival Date" styleClass="label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <DatePicker fx:id="arrivalDatePicker" 
                                GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="date-picker"/>
                    
                    <Label text="Shelf Life (days)" styleClass="label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="freshnessDaysField" promptText="7" 
                               GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="text-field"/>
                    
                    <Label text="Supplier" styleClass="label" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="supplierComboBox" promptText="Select supplier..." 
                              GridPane.rowIndex="7" GridPane.columnIndex="1" prefWidth="200" styleClass="combo-box"/>
                </GridPane>
                
                <HBox spacing="12" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="clearBtn" text="Clear" onAction="#handleClear" styleClass="button"/>
                    <Button fx:id="addBtn" text="Add Flower" onAction="#handleAdd" styleClass="primary-button"/>
                    <Button fx:id="updateBtn" text="Save Changes" onAction="#handleUpdate" styleClass="primary-button"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>
    
    <!-- Bottom - Back Button -->
</BorderPane>
